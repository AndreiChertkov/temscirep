% Команды для создания разделов отчета:

\newcommand{\inp}[1]{
  \FloatBarrier
  \newpage
  \par
  \input{special/#1}
  \par
}

\newcommand{\sect}[3]{
  \FloatBarrier
  \newpage
  \section{#3}
  \label{#2}
  \par
  \input{content/#1}
  \par
}

\newcommand{\sectspec}[2]{
  \FloatBarrier
  \newpage
  \begin{center}\section*{#2}\end{center}
  \addcontentsline{toc}{section}{\texorpdfstring{#2\dotfill}{#2}}
  \par
  \input{special/#1}
  \par
}

\newcommand{\subsect}[3]{
  \subsection{#3}
  \label{#2}
  \par
  \input{content/#1}
  \par
}

\newcommand{\subsubsect}[2]{
  \subsubsection{#2}
  \label{#1}
  \par
}


