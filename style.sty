  \addcontentsline{toc}{section}
    {\texorpdfstring{СПИСОК ИСПОЛЬЗОВАННЫХ ИСТОЧНИКОВ\dotfill}
    {СПИСОК ИСПОЛЬЗОВАННЫХ ИСТОЧНИКОВ}}
